<UserControl x:Class="IntTeTestat.WaitingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="380">

    <UserControl.Resources>
        <Storyboard x:Name="storyboard" >
            <DoubleAnimation Storyboard.TargetName="progressBar1" Storyboard.TargetProperty="Value" RepeatBehavior="Forever" To="100" Duration="0:0:5" />
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Background="White">
        <ProgressBar Height="25" HorizontalAlignment="Left" Margin="12,120,0,0" Name="progressBar1" VerticalAlignment="Top" Width="356" />
        <TextBlock Height="25" HorizontalAlignment="Center" Margin="131,88,105,0" Name="informationTextBlock" Text="Warte auf Mitspieler..." VerticalAlignment="Top" Width="144" />
    </Grid>
</UserControl>
