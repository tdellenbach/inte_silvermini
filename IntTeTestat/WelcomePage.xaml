<UserControl x:Class="IntTeTestat.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <TextBox Name="UsernameTextBox" Margin="109,77,141,200" />
        <Button Content="Starte Spiel" Name="StartGameButton" Margin="0,77,15,200" HorizontalAlignment="Right" Width="122" Click="StartGameButton_Click" />
        <TextBlock Height="52" HorizontalAlignment="Left" Margin="15,15,0,0" Name="WelcomeTextBlock" Text="Willkommen! Hier können Sie ein Ratespiel starten. Geben sie dazu erst einen Benutzernamen ein und starten Sie das Spiel anschliessend mit der Schaltfläche 'Starte Spiel'." VerticalAlignment="Top" Width="372" TextWrapping="Wrap" />
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="15,80,0,0" Name="UsernameTextBlock" Text="Benutzername:" VerticalAlignment="Top" Width="88" />
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="109,120,0,0" Name="WarningTextBlock" Text="Gib einen Benutzernamen ein!" VerticalAlignment="Top" Width="176" />
    </Grid>
</UserControl>
